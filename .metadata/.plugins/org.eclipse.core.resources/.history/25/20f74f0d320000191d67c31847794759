package com.ejb.dao;

import java.util.Date;
import java.util.List;

import javax.ejb.Local;

import com.entity.Schedule;
import com.entity.Team;

@Local
public interface ScheduleDAOLocal {

	
	public Schedule findScheduleById(Long id);
	
	public List<Schedule> findScheduleByDate(Date date);
	
	public List<Schedule> findScheduleByTime(Date time);
	
	public List<Schedule> findScheduleByDateAndTime(Date date, Date time);
	
	public List<Schedule> findScheduleByHomeTeam(Team homeTeam);
	
	public List<Schedule> findScheduleByAwayTeam(Team awayTeam);
	
	public List<Schedule> findScheduleByMatchUp(Team teamOne, Team teamTwo);
}
